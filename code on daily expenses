def calculate_expenses():
    print("--- Expense Calculator (For Loop) ---")
    
    # A list of expenses
    daily_expenses = [12.50, 4.00, 55.00, 20.00, 10.50]
    total = 0
    
    # Loop through each item in the list
    # 'expense' is a temporary variable that holds the current item
    for expense in daily_expenses:
        print(f"Processing receipt for: ${expense}")
        total = total + expense
        
    print(f"Total spent: ${total}")

# Run the example
calculate_expenses()





















































































































































































































